<div class="container">
  <h1>Hacker News Clone 1</h1>
  <a href="/posts/new">Submit</a>
  <ul>
    <% @posts.each do |post| %>
      <li><a href="<%= post.url %>"><%= post.title %></a> (<%= post.url %>) - <a href="/posts/<%=post.id%>"><%= post.comments.count%></a> Comments</li>
      <!-- TODO add comment count for each post -->
    <% end %>
  </ul>
</div>
